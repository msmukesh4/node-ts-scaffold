{
    "ignore": [
        "**/*.test.ts",
        "**/*.spec.ts",
        ".git",
        "node_modules"
    ],
    "watch": [
        "src"
    ],
    "exec": "node -r ts-node/register src/main.ts",
    "ext": "ts",
    "env": {
        "NODE_ENV": "dev"
    },
    "events": {
        "crash" : "kill-port 3000"
    }
}